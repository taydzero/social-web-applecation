{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "./dist",        // Добавлено для вывода файлов в папку dist
    "rootDir": "./src"          // Указано корневое расположение исходных файлов
  },
  "include": ["src/**/*"]
}
